[ubuntu]
13.214.181.179

[ubuntu:vars]
ansible_ssh_user=ubuntu
ansible_ssh_private_key_file=~/.ssh/id_rsa

# Pin Ansible to use system Python 3.12 to avoid cryptography compatibility issues
# After installing Python 3.14, Ansible may auto-discover it and fail because
# system packages (cryptography) are compiled for Python 3.12
ansible_python_interpreter=/usr/bin/python3.12

# SECURITY: Use accept-new instead of no to prevent MITM attacks
# This accepts new keys on first connect but verifies on subsequent connections
ansible_ssh_common_args='-o StrictHostKeyChecking=accept-new -o ServerAliveInterval=60'

# Connection timeout for faster failure detection
ansible_ssh_extra_args='-o ConnectTimeout=10'

